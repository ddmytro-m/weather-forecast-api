generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Frequency {
  hourly
  daily
}

model Subscription {
  email     String    @id @unique
  city      String
  frequency Frequency
  confirmed Boolean   @default(false)
}
